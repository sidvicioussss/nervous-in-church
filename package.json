{
  "name": "nervous-in-church",
  "version": "0.1.0",
  "description": "A quiet room for legal writing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.23.0"
  },
  "build": {
    "appId": "com.nervousinchurch.app",
    "productName": "Nervous in Church",
    "icon": "assets/icon.icns",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "dir"
      ]
    },
    "dmg": {
      "title": "Nervous in Church",
      "icon": "assets/icon.icns"
    }
  }
}
